# ============================================
# AI ARTIFACT BUILDER - Environment Variables
# ============================================

# --------------------------------------------
# Anthropic API Configuration
# --------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# --------------------------------------------
# AnythingLLM Configuration
# --------------------------------------------
# Generate a secure random key: openssl rand -base64 32
ANYTHINGLLM_API_KEY=your-anythingllm-api-key-here
ANYTHINGLLM_URL=http://anythingllm:3001

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# PostgreSQL password - use a strong password in production
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://admin:${DB_PASSWORD}@postgres:5432/artifact_builder

# --------------------------------------------
# Vector Database Configuration
# --------------------------------------------
CHROMA_URL=http://chromadb:8000

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NODE_ENV=production
PORT=4000

# JWT Secret for authentication - use a strong random string
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
REACT_APP_API_URL=http://localhost:4000
REACT_APP_WS_URL=ws://localhost:4000
FRONTEND_API_URL=http://localhost:4000
FRONTEND_WS_URL=ws://localhost:4000

# --------------------------------------------
# Optional: Rate Limiting
# --------------------------------------------
# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# --------------------------------------------
# Optional: File Upload
# --------------------------------------------
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=js,jsx,ts,tsx,css,html,json,md

# --------------------------------------------
# Optional: Logging
# --------------------------------------------
LOG_LEVEL=info  # error, warn, info, debug
LOG_FILE=./logs/app.log

# --------------------------------------------
# Development Only
# --------------------------------------------
# Uncomment for development mode
# NODE_ENV=development
# LOG_LEVEL=debug
